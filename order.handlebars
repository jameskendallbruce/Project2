<h3>Place an Order</h3>
<br>
<div class="container">
    <div class="row">
        <div class="col">
            <h3>{{name}}</h3>
            <img src={{listing.url}}>
            <div style="border: 2px black solid">
                <p>Description: {{listing.description}}</p>
                <p>Price: {{listing.price}}</p>
                <p>Location: {{listing.serving_location}}</p>
                {{#if listing.delivery}}<p>Delivery offered</p>{{/if}}
            </div>
        </div>
        <div class="col">
            <form id="orderform">
                <label for="quantity"><b>Quantity</b></label>
                <select class="form-control" id="quantity">
                    <option>&nbsp;&nbsp;&nbsp;</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </select>
                {{!-- <a href="/orderConfirm"><button class="btn btn-success">Place Order</button></a> --}}
                <button class="btn btn-success" id="orderSubmit">Place Order</button>
            </form>
            <label for="message"><b>Message to Vendor</b></label>
            <textarea id="message" rows="4" cols="50" name="comment" form="orderform" placeholder="Write a message" required></textarea>
        </div>
    </div>
</div>

<script>
    $("#orderSubmit").on("click", function(event){
        event.preventDefault();
        console.log("order placed")
        window.location="/orderConfirm"
    });
</script>
